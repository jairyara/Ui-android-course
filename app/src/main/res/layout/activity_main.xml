<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher"
        top:layout_constraintEnd_toEndOf="parent"
        top:layout_constraintStart_toStartOf="parent"
        top:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etLoginUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawableStart="@drawable/vector_person"
        android:drawableLeft="@drawable/vector_person"
        android:drawablePadding="12dp"
        android:hint="@string/hint_user"
        tools:ignore="UnknownId"
        top:layout_constraintTop_toBottomOf="@+id/ivLoginLogo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:drawableStart="@drawable/vector_lock"
        android:drawableLeft="@drawable/vector_lock"
        android:drawablePadding="12dp"
        android:hint="@string/password"
        top:layout_constraintTop_toBottomOf="@+id/etLoginUserName" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/signIn"
        android:textColor="@color/primary_text"
        top:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>